---
import { Icon } from 'astro-icon/components';

const {pathname} = Astro.url;
const currentPath = pathname;
const links = [
    {
        name: "HOME",
        icon: "teenyicons:home-alt-outline",
        href: "/"
    },
    {
        name: "VARIABLE",
        icon: "teenyicons:area-chart-alt-outline",
        href: "/funciones/variable"
    },
    {
        name: "LINEAL",
        icon: "teenyicons:frame-outline",
        href: "/funciones/lineal"
    },
    {
        name: "EXTRA",
        icon: "teenyicons:add-outline",
        href: "/extra"
    }
]
---
<div id="container">
    <nav>
        {links.map(i=><a href={i.href} class={currentPath==i.href?"active":""}>
            <Icon name={i.icon} size={32}/>
            <span>{i.name}</span>
        </a>)}
    </nav>
</div>



<style>
    #container{
        position: fixed;
        height: 97%;
        top: 0;
        left: 0;
        z-index: 2;
        width: 70px;
    }
    .active{
        color: var(--text-accent) !important;
    }
    .active svg{
        color: var(--text-accent) !important;
    }
    nav{
        background: var(--background-secondary);
        border-color: var(--border-color);
        border-width: 1px;
        border-style: solid;
        border-radius: 10rem;
        margin: 10px 0 10px 10px;
        overflow-x: hidden;
        justify-content: center;
        display: flex;
        gap: 32px;
        width: 100%;
        height: 100%;
        flex-direction: column;
    }
    a{
        margin: auto, 0;
        font-size: 0.7rem;
        color: var(--border-color);
        transition: color 0.3s;
        text-decoration: none;
        padding: 0 10px;
    }
    a span{
        margin:auto;
        display: block;
        text-align: center;
        padding-top: 8px;
        transition: display 1s ease;
    }
    a svg{
        color: var(--border-color);
        transition: color 0.3s;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
    a:hover svg {
        color: #52647e;
    }
    #logo{
        margin: 1rem 0 4rem 0;
    }
    a:hover{
        color: #52647e;
    }
</style>